{
  "manifest_version": 3,
  "name": "Csphere Tab Saver",
  "version": "1.0",
  "description": "Google chrome extension that works alongside our app to bookmark their tabs.",
  "permissions": ["tabs", "cookies", "identity", "identity.email"],

  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/popup.png"
  },

  "host_permissions": [
    "http://localhost:3000/",
    "http://127.0.0.1:3000/",
    "http://localhost:8000/",
    "http://127.0.0.1:8000/",
    "https://csphere-backend-5f17c775954b.herokuapp.com/",
    "https://content-rediscovery-platform.vercel.app/"
  ]
}
